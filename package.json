{
  "name": "consola",
  "version": "1.0.0",
  "description": "Your command center for AI-assisted development. Built on top of Claude Code, Consola brings structure to AI coding through the RPI methodology (Research, Plan, Implement) with native integration to your issue trackers for seamless project management.",
  "main": "dist/main/main/index.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build --config vite.config.ts",
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite --config vite.config.ts",
    "dev:electron": "wait-on http://localhost:5173 && NODE_ENV=development electron .",
    "test:e2e": "playwright test",
    "postinstall": "npx @electron/rebuild -f -w better-sqlite3"
  },
  "keywords": [
    "claude-code",
    "ai-development",
    "electron",
    "rpi-methodology",
    "linear",
    "issue-tracker"
  ],
  "author": "Javier Taraza",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.30",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@radix-ui/themes": "^3.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "better-sqlite3": "^12.6.2",
    "lodash-es": "^4.17.23",
    "lucide-react": "^0.563.0",
    "material-file-icons": "^2.4.0",
    "node-pty": "^1.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^4.5.9",
    "react-router-dom": "^7.13.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@playwright/test": "^1.58.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.19",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "concurrently": "^9.2.1",
    "electron": "^28.0.0",
    "typescript": "^5.3.3",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  }
}
